{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "stops": {
      "type": "array",
      "description": "Every stop in the transit system.",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "integer",
            "description": "A unique positive integer to identify this stop."
          },
          "name": {
            "type": "string",
            "description": "e.g. 'Pakenham'"
          },
          "platforms": {
            "type": "array",
            "description": "Data about the platforms at this stop.",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "id": {
                  "type": "string",
                  "description": "A unique (for this stop) string to identify this platform."
                },
                "name": {
                  "type": "string",
                  "description": "e.g. '1' or '15A'"
                }
              },
              "required": [
                "id",
                "name"
              ]
            }
          }
        },
        "required": [
          "id",
          "name"
        ]
      }
    }
  },
  "required": [
    "stops"
  ]
}
